<%= javascript_include_tag "project_selectors" %> <!-- PULL IN FUNCTIONALITY FOR LIMITING SELECTION LISTS BASED ON PREVIOUS SELECTION -->

  <!-- ERROR HANDLING -->
     
  <!-- INITIALIZATION -->
  <% scrum_task = scrum_task %> <!-- generate local variable from local pulled in from render partial in new.js.erb. local variable isn't recognized if I don't have this line included -->
  <% if scrum_task.nil? then scrum_task = ScrumTask.new end%> <!-- null handling to satisfy compiler -->

  <% periodicity = TaskRecurrence.find(1) %>
  <% project = project %>
  <% project_umbrella = project_umbrella %>
  <% project_module = project_module %>
  <% recurrence = TaskRecurrence.all.map{|c| [ c.name, c.id ] } %>


  <!-- FORM FIELDS -->
<%= form_for scrum_task do |form| %>

    <div class="field">
      Periodicity: <%= periodicity.name %>

      <%= form.hidden_field :task_recurrences_id, :value=> periodicity.id %> 
    </div> 

    <div class="field">
      Project Umbrella: <%= project_umbrella.name %>

      <%= form.hidden_field :project_umbrella_id, :value=> project_umbrella.id %> 
      
    </div>

    <div class="field" id="scrum_task_new_project_selector">
      Project: <%= project.name %>

      <%= form.hidden_field :project_id, :value=> project.id %>     
    </div>

    <div class="field" id="scrum_task_new_project_module_selector">
      Project Module: <%= project_module.name %>

      <%= form.hidden_field :project_module_id, :value=> project_module.id %> 
    </div>

    <div class="field">
      <%= form.label(:name, "Scrum Task Name: ") %> 
      <%= form.text_field :name %>
    </div>

    <div class="field">
      <%= form.hidden_field :repeat_recurrences_id, :value => 1 %>
    </div>

    <div>
      <%= form.hidden_field :active, :value=> true %>
    </div>

    <div class="field">
      Add to 'Today's Tasks':
      <%= form.check_box :is_daily_task %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>

  <% end %>
</div>

