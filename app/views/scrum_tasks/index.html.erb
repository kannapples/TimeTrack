<p id="notice"><%= notice %></p>

<h1>Scrum Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Periodicity</th>
      <th>Category</th>
      <th>Task</th>
      <th>Repeat Recurrence</th>
      <th>Completed?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scrum_tasks.each do |scrum_task| %>
      <tr>
        <td><%= scrum_task.task_recurrences_id %></td>
        <td><%= scrum_task.category %></td>
        <td><%= scrum_task.task %></td>
        <td><%= scrum_task.repeat_recurrences_id %></td>
        <td><%= scrum_task.completed %></td>
        <td><%= link_to 'Show', scrum_task %></td>
        <td><%= link_to 'Edit', edit_scrum_task_path(scrum_task) %></td>
        <td><%= link_to 'Destroy', scrum_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

